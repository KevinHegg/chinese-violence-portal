# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.astro text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.cjs text eol=lf
*.mjs text eol=lf

# Source files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.config.* text eol=lf

# Markdown and documentation
*.md text eol=lf
*.markdown text eol=lf

# Stylesheets
*.css text eol=lf
*.scss text eol=lf
