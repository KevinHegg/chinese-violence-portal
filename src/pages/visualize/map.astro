---
// Map page with Mapbox integration
export const prerender = false;

const mapboxToken = import.meta.env.PUBLIC_MAPBOX_TOKEN || 'pk.eyJ1Ijoia2V2aW5oZWdnIiwiYSI6ImNscmprbG80NzA0aW8ybm94bXFveG1qcmYifQ.z0za-koZbyVbgwJ5AVg9LA';
const mapboxStyle = 'kevinhegg/cmd4pgf7p01ud01s4awo3b3yd';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Anti-Chinese Violence Map - John Crow Archive</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Interactive map and timeline of anti-Chinese violence events (1850-1915). Explore geographic patterns of lynchings, massacres, and riots across the American West.">
  <!-- Leaflet CSS and JS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet@1.6.0/dist/leaflet.css">
  <script src="https://cdn.jsdelivr.net/npm/leaflet@1.6.0/dist/leaflet.js" onload="window.leafletLoaded = true"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
    }
    #map {
      width: 100%;
      height: 100vh;
    }
    /* Overlay for timeline controls: half the map's width, centered at bottom */
    #overlay {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 50%;
      z-index: 1000;
      background: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 5px;
      display: flex;
      align-items: center;
      gap: 10px;
      justify-content: center;
    }
    #yearSlider { flex: 1; }
    #yearLabel { font-size: 14px; font-weight: bold; }
    /* Default marker style: thin stroke */
    .leaflet-interactive { stroke-width: 2 !important; }
    /* Pulse animation for new markers */
    @keyframes pulseColor {
      0% { fill: yellow; stroke: yellow; }
      50% { fill: orange; stroke: orange; }
      100% { fill: red; stroke: red; }
    }
    .pulse { animation: pulseColor 750ms ease-out forwards; }
    .info-panel {
      position: absolute;
      top: 20px;
      right: 20px;
      background: #FFFBED;
      padding: 0;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      width: 280px;
      z-index: 1000;
      cursor: default;
      user-select: none;
      transition: none;
      border:1px solid #e5e7eb;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      overflow: hidden;
    }
    .info-panel-header {
      position: relative;
      width: 100%;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 12px;
      background: #FEF3C7;
      border-radius: 8px 8px 0 0;
      border-bottom:1px solid #e5e7eb;
      cursor: grab;
      box-sizing: border-box;
    }
    .drag-handle {
      font-size: 12px;
      color: #6b7280;
      cursor: grab;
      margin-right: 8px;
    }
    .info-panel h1 {
      font-size: 0.9rem;
      font-weight: 600;
      margin: 0;
      color: #1f2937;
      letter-spacing: 0.01em;
      flex: 1;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .info-panel p {
      display: block;
      font-size: 0.875rem;
      margin:0 2px 0;
      color: #4b5563;
      line-height: 1.4;
    }
    .info-panel .collapse-btn, .info-panel .expand-btn {
      width: 24px;
      height: 24px;
      border: none;
      background: transparent;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      color: #6b7280;
      transition: background-color 0.2s;
      border-radius: 4px;
    }
    .info-panel .collapse-btn:hover, .info-panel .expand-btn:hover {
      background: #d1d5db;
    }
    .info-panel .collapse-btn { display: flex; }
    .info-panel .expand-btn { display: none; }
    .info-panel.collapsed h1,
    .info-panel.collapsed p,
    .info-panel.collapsed .back-link {
      display: none;
    }
    .info-panel.collapsed .collapse-btn { display: none; }
    .info-panel.collapsed .expand-btn { display: flex; }
    .info-panel.collapsed .collapsed-back-link {
      display: flex !important;
      justify-content: center;
      align-items: center;
      flex: 1;
      font-size: 14px;
      color: #000;
      text-decoration: none;
    }
    .info-panel-content {
      padding: 16px;
      width: 100%;
      box-sizing: border-box;
      overflow-wrap: break-word;
      word-wrap: break-word;
    }
    .info-panel.collapsed .info-panel-content {
      padding: 8px 16px;
    }
    .back-link {
      display: inline-block;
      font-size: 14px;
      color: #000;
      text-decoration: none;
      margin-top: 8px;
      margin-bottom: 0;
    }
    .back-link:hover {
      text-decoration: underline;
    }
    .info-panel.collapsed .info-panel-content {
      display: none;
    }
    .collapsed-back-link {
      display: none;
    }
    /* Screen reader only content */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }
  </style>
</head>
<body>
  <!-- Hidden keyboard instructions for screen readers -->
  <div class="sr-only" id="map-keyboard-instructions">
    <h2>Keyboard Navigation Instructions</h2>
    <p>This interactive map can be navigated using your keyboard:</p>
    <ul>
      <li>Arrow keys: Pan the map in any direction</li>
      <li>Plus (+) or Equals (=) key: Zoom in</li>
      <li>Minus (-) or Underscore (_) key: Zoom out</li>
      <li>Space bar: Play or pause the timeline animation</li>
      <li>Left/Right arrow keys (when timeline is focused): Move through years</li>
      <li>Tab: Navigate between map, timeline slider, and play button</li>
      <li>Enter: Activate buttons and links</li>
    </ul>
    <p>A complete list of all violence incidents is provided below the map for accessible browsing.</p>
  </div>
  
  <div id="map" 
       role="application" 
       tabindex="0"
       aria-label="Interactive map showing locations of anti-Chinese violence incidents from 1850 to 1915. Use keyboard controls to navigate: arrow keys to pan, plus and minus to zoom, space bar to play timeline. See keyboard instructions and data list below for accessible alternatives."
       aria-describedby="map-keyboard-instructions"></div>
  <div id="overlay">
    <button id="playButton" class="btn btn-primary" aria-label="Play timeline animation">Play</button>
    <input type="range" id="yearSlider" step="1" aria-label="Timeline year slider">
    <span id="yearLabel" aria-live="polite" aria-atomic="true"></span>
  </div>
  
  <!-- Accessible data list for screen readers -->
  <div id="map-data-list" class="sr-only" role="region" aria-label="List of anti-Chinese violence incidents">
    <h2>Complete List of Violence Incidents</h2>
    <p>This list contains all incidents shown on the map, organized by year. Each entry includes location, date, event type, and victim information.</p>
    <div id="incidents-list-content">
      <!-- Will be populated by JavaScript -->
    </div>
  </div>
  <div id="infoPanel" class="info-panel">
    <div class="info-panel-header">
      <span class="drag-handle">⋮⋮</span>
      <h1>Anti-Chinese Violence Map</h1>
      <a id="back-link" href="/visualize/" class="back-link collapsed-back-link">&lt; Back to Visualizations</a>
      <button class="collapse-btn" title="Roll up" aria-label="Roll up">&#x25B2;</button>
      <button class="expand-btn" title="Expand" aria-label="Expand">&#x25BC;</button>
    </div>
    <div class="info-panel-content">
      <p>Interactive map and timeline of anti-Chinese violence events (1850-1915). Click on a red marker to view more details about the event.</p>
      <a id="back-link-expanded" href="/visualize/" class="back-link">&lt; Back to Visualizations</a>
    </div>
  </div>
  <script is:inline define:vars={{ mapboxToken, mapboxStyle }}>
    // Wait for Leaflet to load
    function initMap() {
      if (typeof L === 'undefined' || !window.leafletLoaded) {
        setTimeout(initMap, 100);
        return;
      }

    // Parameters - INCREASED SPEED
    const pulseDuration = 750;      // 750ms per pulse cycle
    const playbackSpeed = 300;       // FASTER: 300ms per year increment (was 500)
    const endColor = "red";          // Final marker color

    // API endpoint for lynchings data (fetches from Google Sheets)
    const jsonURL = "/api/lynchings";
    
    // Mapbox configuration from server
    const MAPBOX_TOKEN = mapboxToken;
    const MAPBOX_STYLE = mapboxStyle;

    let dataRows = [];
    let minYear, maxYear;
    let lastYear = 0;
    let animationInterval = null;
    let openPopups = []; // Track open popups

    // Set up the Leaflet map
    const map = L.map('map').setView([39.8283, -98.5795], 5);
    L.tileLayer(`https://api.mapbox.com/styles/v1/${MAPBOX_STYLE}/tiles/{z}/{x}/{y}?access_token=${MAPBOX_TOKEN}`, {
    tileSize: 512,
    zoomOffset: -1,
    attribution: '© Mapbox © OpenStreetMap',
    accessToken: MAPBOX_TOKEN
    }).addTo(map);

    const markersLayer = L.layerGroup().addTo(map);

    // Simple responsive zoom based on browser width at load time only
    function adjustZoomForScreenSize() {
      const browserWidth = window.innerWidth;
      const zoomLevel = browserWidth >= 1024? 5 : 4;
      map.setZoom(zoomLevel);
    }

    // Adjust zoom on load only (no resize listener)
    adjustZoomForScreenSize();

    // Timeline controls
    const slider = document.getElementById('yearSlider');
    const yearLabel = document.getElementById('yearLabel');
    const playButton = document.getElementById('playButton');

    // Helper to get field with fallback (prefer dash-case)
    function getField(d, field) {
      return d[field] || d[field.toLowerCase()] || d[field.replace(/ /g, "-").toLowerCase()] || '';
    }

    // Scale marker radius based on number-of-victims
    function scaleRadius(v) {
      const victimValues = dataRows.map(d => +getField(d, "number-of-victims"));
      const minVictims = Math.min(...victimValues);
      const maxVictims = Math.max(...victimValues);
      return 5 + (v - minVictims) / (maxVictims - minVictims) * 15;
    }

    // Build popup content
    function buildPopup(d) {
      let content = `<b>${getField(d, "narrative-short-title")}</b>`;
      content += `<table style="margin: 4px 0 0 0; border-collapse: collapse; width: 100%; font-size: 1em;">
        <tr><td style='font-weight:bold; padding-right:2px; vertical-align:top;'>Date:</td><td style='text-align:left;'>${getField(d, "date")}</td></tr>
        <tr><td style='font-weight:bold; padding-right:2px; vertical-align:top;'>Location:</td><td style='text-align:left;'>${(() => {
          const city = getField(d, "city");
          const county = getField(d, "county");
          const state = getField(d, "state");
          if(city && city.trim() !== '') {
            // Show only city and state
            return [city, state].filter(Boolean).join(", ");
          } else if(county && county.trim() !== '') {
            // Show county (with comma) and state
            return [county + " County,", state].filter(Boolean).join(" ");
          } else {
            // Only state or empty
            return state || '';
          }
        })()}</td></tr>
        <tr><td style='font-weight:bold; padding-right:2px; vertical-align:top;'>No.&nbsp;of&nbsp;Victims:&nbsp;</td><td style='text-align:left;'>${getField(d, "number-of-victims")}</td></tr>
        <tr><td style='font-weight:bold; padding-right:2px; vertical-align:top;'>Event Type:</td><td style='text-align:left;'>${getField(d, "event-type")}</td></tr>
      </table>`;
      content += `<hr style="margin: 8px 0 4px 0; border: none; border-top:1px solid #ccc;">`;
      content += `${getField(d, "narrative-summary")} <a href="/records/${getField(d, "lynching-id")}" target="_blank">(more details)</a>`;
      return content;
    }

    // Apply pulse animation to a marker's SVG path
    function applyPulse(el) {
      el.classList.add("pulse");
      setTimeout(() => {
        el.classList.remove("pulse");
      }, pulseDuration);
    }

    // Update markers cumulatively based on currentYear - FIXED POPUP BEHAVIOR
    function updateMarkers(currentYear) {
      // Preserve open popup lynching-id (if any)
      let openLynchingId = null;
      if (openPopups.length > 0 && openPopups[0].getPopup() && openPopups[0].isPopupOpen()) {
        const popupContent = openPopups[0].getPopup().getContent();
        // Try to extract lynching-id from the (more details) link
        const match = popupContent && popupContent.match(/\/records\/(.*?)\"/);
        if (match && match[1]) {
          openLynchingId = match[1];
        }
      }
      openPopups = [];
      markersLayer.clearLayers();
      const filtered = dataRows.filter(d => +getField(d, "year") <= currentYear);
      let markerToOpen = null;
      filtered.forEach(d => {
        const year = +getField(d, "year");
        const num = +getField(d, "number-of-victims");
        const lat = +getField(d, "latitude");
        const lon = +getField(d, "longitude");
        if(lat && lon) {
          const marker = L.circleMarker([lat, lon], {
            radius: scaleRadius(num),
            color: endColor,
            fillColor: endColor,
            fillOpacity: 0.6,
            weight: 2
          });
          marker.bindPopup(buildPopup(d));
          marker.on('popupopen', function() { openPopups.push(marker); });
          marker.on('popupclose', function() { const index = openPopups.indexOf(marker); if (index > -1) { openPopups.splice(index, 1); } });
          if(year > lastYear) {
            marker.on('add', function() { if(marker._path) { applyPulse(marker._path); } });
          }
          markersLayer.addLayer(marker);
          // If this marker matches the previously open popup, remember it
          if (openLynchingId && getField(d, "lynching-id") === openLynchingId) {
            markerToOpen = marker;
          }
        }
      });
      // Reopen the popup if possible
      if (markerToOpen) {
        markerToOpen.openPopup();
      }
      lastYear = currentYear;
    }

    // Slider event: update markers and stop auto-play if active
    slider.addEventListener("input", function() {
      const selectedYear = +this.value;
      yearLabel.textContent = selectedYear;
      if(animationInterval !== null) {
        clearInterval(animationInterval);
        animationInterval = null;
        playButton.textContent = "Play";
      }
      updateMarkers(selectedYear);
    });

    // Play/Pause button event: auto-advance timeline; stop at maxYear; restart if at end
    playButton.addEventListener("click", function() {
      if(+slider.value >= maxYear) {
        slider.value = minYear;
        yearLabel.textContent = minYear;
        updateMarkers(minYear);
      }
      if(animationInterval !== null) {
        clearInterval(animationInterval);
        animationInterval = null;
        playButton.textContent = "Play";
      } else {
        playButton.textContent = "Pause";
        animationInterval = setInterval(() => {
          let year = +slider.value;
          if(year < maxYear) {
            year++;
          } else {
            clearInterval(animationInterval);
            animationInterval = null;
            playButton.textContent = "Play";
          }
          slider.value = year;
          yearLabel.textContent = year;
          updateMarkers(year);
        }, playbackSpeed);
      }
    });

    // Load JSON data using fetch
    fetch(jsonURL)
      .then(response => response.json())
      .then(data => {
        dataRows = data;
        dataRows.forEach(d => {
          d.year = +getField(d, "year");
          d["number-of-victims"] = +getField(d, "number-of-victims");
          d.latitude = +getField(d, "latitude");
          d.longitude = +getField(d, "longitude");
        });
        const allYears = dataRows.map(d => +getField(d, "year"));
        minYear = Math.min(...allYears);
        maxYear = Math.max(...allYears);
        // Force timeline to start at 1852 if data has earlier years
        if(minYear < 1852) {
          minYear = 1852;
        }
        slider.min = minYear;
        slider.max = maxYear;
        slider.value = minYear;
        yearLabel.textContent = minYear;
        lastYear = minYear;
        updateMarkers(minYear);

        // AUTO-START PLAYBACK
        setTimeout(() => {
          playButton.click(); // Start playing automatically
        }, 1000); // Wait 1 second after load

      }).catch(error => {
        console.error("Error loading JSON:", error);
      });

    // Backlink logic
    function getSafeBacklink() {
      const urlParams = new URLSearchParams(window.location.search);
      let fromlink = urlParams.get('fromlink');
      let linklabel = urlParams.get('linklabel');
      // Decode only once
      try { fromlink = fromlink ? decodeURIComponent(fromlink) : null; } catch { }
      try { linklabel = linklabel ? decodeURIComponent(linklabel) : null; } catch { }
      // Validate fromlink: must be a relative URL (starts with /)
      if (!fromlink || !fromlink.startsWith('/')) fromlink = '/visualize/';
      if (!linklabel) linklabel = 'Back to Visualizations';
      return { fromlink, linklabel };
    }
    const { fromlink, linklabel } = getSafeBacklink();
    const backLink = document.getElementById('back-link');
    const backLinkExpanded = document.getElementById('back-link-expanded');
    if (backLink) {
      backLink.href = fromlink;
      backLink.innerHTML = '&lt; ' + linklabel;
    }
    if (backLinkExpanded) {
      backLinkExpanded.href = fromlink;
      backLinkExpanded.innerHTML = '&lt; ' + linklabel;
    }

    // Moveable info panel
    const infoPanel = document.getElementById('infoPanel');
    const infoPanelHeader = infoPanel.querySelector('.info-panel-header');
    let isDragging = false;
    let offsetX = 0;
    let offsetY = 0;
    let startX = 0;
    let startY = 0;

    infoPanelHeader.addEventListener('mousedown', function(e) {
      // Only drag if not clicking a button or link
      if (e.target.tagName === 'BUTTON' || e.target.tagName === 'A') return;
      isDragging = true;
      startX = e.clientX - infoPanel.offsetLeft;
      startY = e.clientY - infoPanel.offsetTop;
      infoPanelHeader.style.cursor = 'grabbing';
    });

    document.addEventListener('mousemove', function(e) {
      if (!isDragging) return;
      offsetX = e.clientX - startX;
      offsetY = e.clientY - startY;
      infoPanel.style.left = offsetX + 'px';
      infoPanel.style.top = offsetY + 'px';
    });

    document.addEventListener('mouseup', function() {
      isDragging = false;
      infoPanelHeader.style.cursor = 'grab';
    });

    // Collapse/expand logic
    const collapseBtn = infoPanel.querySelector('.collapse-btn');
    const expandBtn = infoPanel.querySelector('.expand-btn');
    if (collapseBtn) {
      collapseBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        infoPanel.classList.add('collapsed');
      });
    }
    if (expandBtn) {
      expandBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        infoPanel.classList.remove('collapsed');
      });
    }
    
    // Keyboard navigation for map
    const mapElement = document.getElementById('map');
    if (mapElement) {
      mapElement.addEventListener('keydown', function(e) {
        const panDistance = 50; // pixels
        switch(e.key) {
          case 'ArrowUp':
            e.preventDefault();
            map.panBy([0, -panDistance]);
            break;
          case 'ArrowDown':
            e.preventDefault();
            map.panBy([0, panDistance]);
            break;
          case 'ArrowLeft':
            e.preventDefault();
            map.panBy([-panDistance, 0]);
            break;
          case 'ArrowRight':
            e.preventDefault();
            map.panBy([panDistance, 0]);
            break;
          case '+':
          case '=':
            e.preventDefault();
            map.zoomIn();
            break;
          case '-':
          case '_':
            e.preventDefault();
            map.zoomOut();
            break;
          case ' ':
            e.preventDefault();
            playButton.click();
            break;
        }
      });
    }
    
    // Populate accessible data list
    function populateAccessibleList() {
      const listContent = document.getElementById('incidents-list-content');
      if (!listContent || !dataRows) return;
      
      // Sort by year
      const sortedData = [...dataRows].sort((a, b) => {
        return (+getField(a, "year")) - (+getField(b, "year"));
      });
      
      const ul = document.createElement('ul');
      ul.setAttribute('aria-label', 'List of violence incidents');
      
      sortedData.forEach(d => {
        const year = getField(d, "year");
        const title = getField(d, "narrative-short-title");
        const city = getField(d, "city");
        const county = getField(d, "county");
        const state = getField(d, "state");
        const eventType = getField(d, "event-type");
        const victims = getField(d, "number-of-victims");
        const date = getField(d, "date");
        const lynchingId = getField(d, "lynching-id");
        
        let location = '';
        if(city && city.trim() !== '') {
          location = [city, state].filter(Boolean).join(", ");
        } else if(county && county.trim() !== '') {
          location = [county + " County", state].filter(Boolean).join(", ");
        } else {
          location = state || '';
        }
        
        const li = document.createElement('li');
        li.innerHTML = `<strong>${year}: ${title}</strong> - ${location} (${date}). Event type: ${eventType}. Victims: ${victims}. <a href="/records/${lynchingId}">View full record</a>`;
        ul.appendChild(li);
      });
      
      listContent.appendChild(ul);
    }
    
    // Call populateAccessibleList after data is loaded
    fetch(jsonURL)
      .then(response => response.json())
      .then(data => {
        dataRows = data;
        dataRows.forEach(d => {
          d.year = +getField(d, "year");
          d["number-of-victims"] = +getField(d, "number-of-victims");
          d.latitude = +getField(d, "latitude");
          d.longitude = +getField(d, "longitude");
        });
        const allYears = dataRows.map(d => +getField(d, "year"));
        minYear = Math.min(...allYears);
        maxYear = Math.max(...allYears);
        // Force timeline to start at 1852 if data has earlier years
        if(minYear < 1852) {
          minYear = 1852;
        }
        slider.min = minYear;
        slider.max = maxYear;
        slider.value = minYear;
        yearLabel.textContent = minYear;
        lastYear = minYear;
        updateMarkers(minYear);
        
        // Populate accessible list
        populateAccessibleList();

        // AUTO-START PLAYBACK
        setTimeout(() => {
          playButton.click(); // Start playing automatically
        }, 1000); // Wait 1 second after load

      }).catch(error => {
        console.error("Error loading JSON:", error);
      });
    }
    
    // Start initialization when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMap);
    } else {
      initMap();
    }
  </script>
</body>
</html>
